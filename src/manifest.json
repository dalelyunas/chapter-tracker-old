{
  "name": "Chapter Tracker",
  "description": "Tracks chapters as you read them",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Chapter Tracker",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "https://*/*",
    "http://*/*",
    "unlimitedStorage",
    "notifications",
    "identity"
  ],
  "key": "",
  "oauth2": {
    "client_id": "659459061373-04qr2epbc9ipq744nkjsg3i4hc2hh96j.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/drive.appdata"]
  },
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}
