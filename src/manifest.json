{
  "name": "chapter-tracker",
  "description": "Tracks chapters as you read them",
  "version": 1.0,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "chapter-tracker",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "https://*/*",
    "http://*/*",
    "unlimitedStorage",
    "notifications"
  ]
}